{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    
    "rootDir": ".",
    "outDir": "lib",
    "sourceMap": true,
    
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "test",
    "lib"
  ]
}